<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uy.foodyver1.View.Person"
    >
    <LinearLayout
        android:background="#cf0303"
        android:layout_width="match_parent"
        android:layout_height="115px">
        <TextView
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:text="Tài khoản"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="125px">
        <ImageButton
            android:background="@drawable/ic_person_icon"
            android:layout_weight="2"
            android:layout_width="0px"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tvDangNhap"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="Đăng nhập"
            android:layout_weight="6"
            android:layout_width="0px"
            android:layout_height="match_parent" />
        <TextView
            android:layout_gravity="center"
            android:textSize="40sp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text=">"
            android:layout_weight="2"
            android:layout_width="0px"
            android:layout_height="match_parent" />


    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:background="#eeeeff"
            android:fillViewport="true"
            android:id="@+id/scoll_user_home"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="20px"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:background="#ffffff"
                    android:layout_marginBottom="20px"
                    android:id="@+id/list1_person"
                    android:layout_width="match_parent"
                    android:layout_height="600px">
                </ListView>
                <ListView
                    android:layout_marginBottom="20px"
                    android:background="#ffffff"
                    android:id="@+id/list2_person"
                    android:layout_width="match_parent"
                    android:layout_height="480px">
                </ListView>
                <ListView
                    android:background="#ffffff"
                    android:id="@+id/list3_person"
                    android:layout_width="match_parent"
                    android:layout_height="360px">
                </ListView>

                <TextView
                    android:layout_marginTop="20px"
                    android:text="Version 1.0"
                    android:layout_width="match_parent"
                    android:layout_height="130px" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>